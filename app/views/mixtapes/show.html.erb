<div id="user_nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% end %>
</div>

<h3><%= @mixtape.name %></h3>

<div>
  <% @mixtape.songs.each do |song| %>
  <%= "#{song.artist}: #{song.title}" %><br />
  <% end %>
</div>

<% if !current_user %>
  <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %> to send the mix to Facebook friends.
<% end %>

